{
  "name": "ossiavoice-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev:ossia": "npm -w apps/ossiavoice-web run dev",
    "build:ossia": "npm -w apps/ossiavoice-web run build",
    "test:ossia": "npm -w apps/ossiavoice-web run test:unit",
    "dev:partner": "npm -w apps/partner-web run dev",
    "dev:relay": "npm -w services/ws-relay run dev"
  }
}
